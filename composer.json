{
	"archive": {
		"exclude": [
			"!/languages",
			"!vendor/*",
			"node_modules",
			"CODE_OF_CONDUCT.md",
			"composer.json",
			"composer.lock",
			"package.json",
			"package-lock.json",
			"phpcs.xml.dist",
			"README.md",
			".*"
		]
	},
	"authors": [
		{
			"homepage": "https://mypreview.one",
			"name": "MyPreview - Paddle Payment Gateway for WooCommerce"
		}
	],
	"autoload": {
		"psr-4": {
			"Woo_Paddle_Gateway\\": "src/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"description": "Accept Visa, MasterCard, American Express, Discover, JCB, Diners Club, iDEAL, Alipay, and more directly on your store with the Paddle payment gateway for WooCommerce, including PayPal, Apple Pay, Google Pay, and Microsoft Pay for mobile and desktop.",
	"extra": {
		"scripts-description": {
			"lint:wpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier",
			"lint:wpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
			"make-pot": "Create a POT file for the WordPress plugin in the current directory"
		}
	},
	"homepage": "https://github.com/mypreview/woo-paddle-gateway",
	"keywords": [
		"WordPress",
		"WooCommerce",
		"Plugin"
	],
	"license": "GPL-3.0",
	"name": "mypreview/woo-paddle-gateway",
	"require": {
		"php": ">=7.4",
		"pimple/pimple": "^3.5"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "0.7.2",
		"php-parallel-lint/php-parallel-lint": "1.3.2",
		"phpcompatibility/phpcompatibility-wp": "2.1.3",
		"phpunit/phpunit": "9.5.24",
		"squizlabs/php_codesniffer": "3.7.1",
		"woocommerce/woocommerce-git-hooks": "*",
		"woocommerce/woocommerce-sniffs": "*",
		"wp-cli/i18n-command": "2.4.0",
		"wp-coding-standards/wpcs": "2.3.0"
	},
	"scripts": {
		"bundle": [
			"composer lint:wpcbf",
			"rm -rf woo-paddle-gateway.zip",
			"composer install --no-dev",
			"composer archive --file=woo-paddle-gateway --format=zip",
			"composer install -vvv"
		],
		"lint:wpcbf": "phpcbf --extensions=php -p --runtime-set testVersion 7.4-",
		"lint:wpcs": "phpcs --extensions=php -s -p --runtime-set testVersion 7.4-",
		"make-pot": "wp i18n make-pot . languages/woo-paddle-gateway.pot --domain=woo-paddle-gateway"
	},
	"type": "wordpress-plugin"
}
